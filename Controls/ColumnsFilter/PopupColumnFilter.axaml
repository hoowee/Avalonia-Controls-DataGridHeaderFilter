<Popup xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:models="clr-namespace:Huwei96.AvaloniaControls.DataGridHeaderFilter.Models;assembly=Huwei96.AvaloniaControls.DataGridHeaderFilter"
  xmlns:self="clr-namespace:Huwei96.AvaloniaControls.DataGridHeaderFilter.ColumnsFilter;assembly=Huwei96.AvaloniaControls.DataGridHeaderFilter"
  x:Class="Huwei96.AvaloniaControls.DataGridHeaderFilter.ColumnsFilter.PopupColumnFilter"
  x:DataType="self:PopupColumnFilter"
  MinWidth="300" MinHeight="300" Opacity="1" IsHitTestVisible="True">
  <Border Name="_popupBorder"
          BorderBrush="#C8C8C8"
          BorderThickness="1"
          CornerRadius="6"
          Background="#FFFFFFFF">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="1"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>
  <Grid Margin="10" Name="_popupContentGrid" MinWidth="290" MinHeight="290" Background="#FFFFFFFF">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
  <TextBox Name="searchTextBox" Watermark="输入合约号查询" Background="#FFFFFFFF" FontSize="12"/>
        <Grid Grid.Row="1" Margin="0,5,0,0" Background="#FFFFFFFF">
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
          <ListBoxItem Name="_contentAllView" Grid.Row="0" Classes="allItem" Padding="8,6" HorizontalContentAlignment="Stretch">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <CheckBox Name="_AllCheckBox" Content="All" FontSize="12"/>
              <TextBlock Text="(" VerticalAlignment="Center" Opacity="0.7" FontSize="12"/>
              <TextBlock Name="_AllCountText" Text="{Binding AllControlContent}" VerticalAlignment="Center" Opacity="0.7" FontSize="12"/>
              <TextBlock Text=")" VerticalAlignment="Center" Opacity="0.7" FontSize="12"/>
            </StackPanel>
          </ListBoxItem>
          <Border Grid.Row="1" BorderBrush="#D0D0D0" BorderThickness="1,0,1,1" Background="#FFFFFFFF">
            <ListBox Name="checkedListView" ItemsSource="{Binding ColumnFilters}" Background="#FFFFFFFF" SelectionMode="Multiple">
              <ListBox.Styles>
                <Style Selector="ListBoxItem">
                  <Setter Property="Background" Value="#FFFFFFFF" />
                  <Setter Property="Padding" Value="8,6" />
                </Style>
                <Style Selector="ListBoxItem:pointerover">
                  <Setter Property="Background" Value="#FFF2F2F2" />
                </Style>
                <Style Selector="ListBoxItem:selected">
                  <Setter Property="Background" Value="#FFCCE8FF" />
                </Style>
              </ListBox.Styles>
              <ListBox.ItemTemplate>
                <DataTemplate x:DataType="models:ColumnFilter">
                  <StackPanel Orientation="Horizontal" Spacing="8">
                    <CheckBox Name="checkbox" IsChecked="{Binding IsSelected, Mode=TwoWay}" FontSize="12"/>
                    <TextBlock Text="{Binding Title}" VerticalAlignment="Center" FontSize="12"/>
                    <TextBlock Text="(" VerticalAlignment="Center" Opacity="0.7" FontSize="12"/>
                    <TextBlock Text="{Binding Count}" VerticalAlignment="Center" Opacity="0.7" FontSize="12"/>
                    <TextBlock Text=")" VerticalAlignment="Center" Opacity="0.7" FontSize="12"/>
                  </StackPanel>
                </DataTemplate>
              </ListBox.ItemTemplate>
            </ListBox>
          </Border>
        </Grid>
      </Grid>
      <Grid Grid.Row="1" Background="#E5E5E5"/>
    <Grid Name="_popupGridBtn" Grid.Row="2" Background="#FFFFFFFF" ColumnDefinitions="Auto,*,Auto">
        <StackPanel Orientation="Horizontal" Grid.Column="0">
      <Button Name="btnSelectAll" Content="全 选" FontSize="12" Padding="12,4" Margin="10,6,0,6"/>
      <Button Name="btnInverse" Content="反 选" FontSize="12" Padding="12,4" Margin="6,6,0,6"/>
  <Button Name="btnClear" Content="数据重置" FontSize="12" Padding="12,4" Margin="6,6,0,6"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="2">
      <Button Name="btnApply" Content="应 用" FontSize="12" Padding="20,4" Margin="0,6,10,6"/>
        </StackPanel>
      </Grid>
    </Grid>
  </Border>
</Popup>
